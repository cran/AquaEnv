citHeader("To cite package 'AquaEnv' in publications use:")

bibentry(bibtype = "Article",
         title   = "AquaEnv - An Aquatic Acid-Base Modelling Environment in R\n",
	       journal = "Aquatic Geochemistry",
         author  = c(person("Andreas F. Hofmann"), 
                     person("Karline Soetaert"), 
                     person("Jack J. Middelburg"), 
                     person("Filip J. R. Meysman")),
         year    = 2010,
	       volume  = "DOI 10.1007/s10498-009-9084-1",
	       textVersion = 
         paste("AquaEnv - an Aquatic acid-base modelling Environment in R", 
               "Andreas F. Hofmann, Karline Soetaert, Jack J. Middelburg and Filip J. R. Meysman",
               sep="")
         )

citFooter("We have invested a lot of time and effort in creating AquaEnv,",
          "please cite it when using it, thank you!")
